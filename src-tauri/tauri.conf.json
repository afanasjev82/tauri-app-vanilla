{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "tauri-app-vanilla",
    "version": "0.0.0"
  },
  "tauri": {
	"cli": {
		"description": "Url explorer",
		"longDescription": "Open specified url in window",
		"args": [
			{
				"name": "url",
				"index": 1,
				"takesValue": true
			}
		]
	},
    "allowlist": {
		  "all": false
    },
    "bundle": {
      "active": false,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.vanilla.dev",
      "targets": "all",
      "windows": {
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "title": "tauri-app-vanilla",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "resizable": true,
        "url": "https://google.com",
        "visible": false
      }
    ]
  }
}
